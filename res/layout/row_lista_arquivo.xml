<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/totalbranco"
    android:id="@+id/arquivo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="titulo"
            android:textSize="20dp"
            android:id="@+id/titulo_arquivo"
            android:textColor="@color/totalpreto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/_data"
            android:textSize="11dp"
            android:textColor="@color/totalcinza"
            android:text="01/04/1998"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="11dp"
            android:id="@+id/descricao_arquivo"
            android:textColor="@color/totalcinza"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/file_favorite"
                android:padding="50dp"
                android:width="30dp"
                android:height="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_favorite_disabled"
                android:gravity="right"
                android:layout_gravity="right"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/novo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_new"
                    android:padding="5dp"
                    android:text="@string/novo"
                    android:textColor="@color/totalbranco" />

                <TextView
                    android:id="@+id/nome_arquivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="@string/nome_arquivo"
                    android:visibility="gone"
                    android:textColor="@color/totalbranco" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>