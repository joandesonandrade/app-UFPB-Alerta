<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/totalbranco"
    android:id="@+id/arquivo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/_data_noticia"
            android:textSize="11dp"
            android:textColor="@color/totalcinza"
            android:text="01/04/1998"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="22dp"
            android:id="@+id/noticia_titulo"
            android:textColor="@color/totalpreto"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="20dp"
            android:id="@+id/_conteudo_noticia"
            android:textColor="@color/totalpreto"
            android:autoLink="all"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_gravity="right">
            <TextView
                android:id="@+id/_novo_noticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/colorPrimary"
                android:layout_marginRight="10dp"
                android:text="@string/novo"
                android:drawableLeft="@drawable/ic_new"
                android:textColor="@color/totalbranco"/>
        </LinearLayout>

        <Button
            android:id="@+id/ver_comentario_noticia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_comment"
            android:text="VER COMENTÁRIOS"
            android:drawableLeft="@drawable/ic_comment"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>