<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joandeson.ufpbalerta.arquivo"
    android:background="@color/totalbranco">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/totalbranco">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arquivo_data"
                android:textSize="11dp"
                android:textColor="@color/totalcinza"
                android:text="01/04/1998"/>

            <TextView
                android:id="@+id/arquivo_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="@color/totalpreto"
                android:textSize="22dp"
                android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/arquivo_description"
                    android:text="..."
                    android:textColor="@color/totalpreto"
                    android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/_favorite"
                    android:padding="50dp"
                    android:width="30dp"
                    android:height="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_favorite_disabled"
                    android:gravity="left"
                    android:layout_gravity="left"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/arquivo_novo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@color/colorPrimary"
                            android:layout_marginRight="10dp"
                            android:text="@string/novo"
                            android:drawableLeft="@drawable/ic_new"
                            android:textColor="@color/totalbranco"/>

                        <TextView
                            android:id="@+id/arquivo_nome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@color/colorPrimary"
                            android:layout_marginRight="10dp"
                            android:text="@string/nome_arquivo"
                            android:textColor="@color/totalbranco"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arquivos para baixar"
                    android:textColor="@color/totalpreto"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/baixar_arquivos"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <TextView
                            android:id="@+id/arquivo_filename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="arquivo para baixar"
                            android:drawableLeft="@drawable/ic_cloud"
                            android:textSize="15dp"
                            android:textColor="@color/colorPrimary"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/ver_comentario_arquivo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_comment"
                android:text="VER COMENTÃRIOS"
                android:drawableLeft="@drawable/ic_comment"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
